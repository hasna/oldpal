{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "paths": {
      "@oldpal/core": ["./packages/core/src"],
      "@oldpal/core/*": ["./packages/core/src/*"],
      "@oldpal/terminal": ["./packages/terminal/src"],
      "@oldpal/terminal/*": ["./packages/terminal/src/*"],
      "@oldpal/shared": ["./packages/shared/src"],
      "@oldpal/shared/*": ["./packages/shared/src/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
