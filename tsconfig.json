{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "paths": {
      "@hasna/assistants-core": ["./packages/core/src"],
      "@hasna/assistants-core/*": ["./packages/core/src/*"],
      "@hasna/assistants-terminal": ["./packages/terminal/src"],
      "@hasna/assistants-terminal/*": ["./packages/terminal/src/*"],
      "@hasna/assistants-shared": ["./packages/shared/src"],
      "@hasna/assistants-shared/*": ["./packages/shared/src/*"],
      "@hasna/assistants-web": ["./packages/web/src"],
      "@hasna/assistants-web/*": ["./packages/web/src/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
