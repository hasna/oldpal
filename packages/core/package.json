{
  "name": "@hasna/assistants-core",
  "version": "1.0.1",
  "description": "Core runtime library for building AI assistants with Claude",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts"
    },
    "./runtime": {
      "types": "./src/runtime/index.ts",
      "import": "./src/runtime/index.ts"
    },
    "./*": {
      "types": "./src/*.ts",
      "import": "./src/*.ts"
    }
  },
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "files": [
    "src",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/hasna/assistants.git",
    "directory": "packages/core"
  },
  "homepage": "https://github.com/hasna/assistants/tree/main/packages/core#readme",
  "bugs": {
    "url": "https://github.com/hasna/assistants/issues"
  },
  "keywords": [
    "ai",
    "assistant",
    "claude",
    "anthropic",
    "agent",
    "tools",
    "llm"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "typecheck": "tsc --noEmit",
    "test": "bun test --timeout 60000",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.72.1",
    "openai": "^4.77.0",
    "@aws-sdk/client-s3": "^3.700.0",
    "@aws-sdk/client-secrets-manager": "^3.700.0",
    "@aws-sdk/client-ses": "^3.700.0",
    "@aws-sdk/credential-providers": "^3.700.0",
    "@hasna/assistants-shared": "workspace:*",
    "ajv": "^8.17.1",
    "fast-glob": "^3.3.3",
    "mailparser": "^3.7.1",
    "resend": "^4.0.0"
  },
  "devDependencies": {
    "@hasna/runtime-bun": "workspace:^",
    "@types/bun": "latest",
    "@types/mailparser": "^3.4.5",
    "bun-types": "^1.3.8",
    "typescript": "^5"
  },
  "engines": {
    "node": ">=18",
    "bun": ">=1.0"
  },
  "peerDependencies": {
    "@hasna/runtime-bun": "workspace:*"
  },
  "peerDependenciesMeta": {
    "@hasna/runtime-bun": {
      "optional": true
    }
  }
}
