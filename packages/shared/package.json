  "repository": {
    "type": "git",
    "url": "https://github.com/hasna/assistants.git",
    "directory": "packages/shared"
  },
  "homepage": "https://github.com/hasna/assistants/tree/main/packages/shared#readme",
  "bugs": {
    "url": "https://github.com/hasna/assistants/issues"
  },
  "keywords": [
    "ai",
    "assistant",
    "types",
    "typescript"
  ],
  "scripts": {
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "bun-types": "^1.3.8",
    "typescript": "^5"
  }
