{
  "name": "@hasna/oldpal",
  "version": "0.6.13",
  "description": "Your personal AI assistant - terminal first, voice enabled, connector powered",
  "type": "module",
  "bin": {
    "oldpal": "dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "bun run packages/terminal/src/index.tsx",
    "build": "bun run build.ts",
    "build:packages": "turbo run build",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules dist",
    "prepublishOnly": "bun run build"
  },
  "dependencies": {},
  "devDependencies": {
    "@anthropic-ai/sdk": "^0.32.0",
    "@types/bun": "latest",
    "@types/react": "^18.3.0",
    "bun-types": "^1.3.8",
    "chalk": "^5.3.0",
    "ink": "^5.0.1",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^6.0.0",
    "marked": "^15.0.0",
    "marked-terminal": "^7.2.0",
    "react": "^18.3.1",
    "turbo": "^2.3.0",
    "typescript": "^5.7.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hasna/oldpal.git"
  },
  "keywords": [
    "ai",
    "assistant",
    "cli",
    "terminal",
    "claude",
    "anthropic",
    "bun",
    "ink"
  ],
  "author": "Hasna",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hasna/oldpal/issues"
  },
  "homepage": "https://github.com/hasna/oldpal#readme",
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "bun": ">=1.0.0"
  },
  "workspaces": [
    "packages/*"
  ]
}
