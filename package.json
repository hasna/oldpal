{
  "name": "@hasna/assistants",
  "version": "1.1.17",
  "description": "Multi-assistant orchestration platform - terminal first, voice enabled, connector powered",
  "type": "module",
  "bin": {
    "assistants": "dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "bun run packages/terminal/src/index.tsx",
    "build": "bun run build.ts",
    "build:packages": "turbo run build",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "test:coverage": "turbo run test -- --coverage",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules dist",
    "prepublishOnly": "bun run build"
  },
  "devDependencies": {
    "@anthropic-ai/sdk": "^0.74.0",
    "@hasna/runtime-bun": "workspace:^",
    "@types/bun": "^1.3.8",
    "@types/react": "^19.2.13",
    "bun-types": "^1.3.9",
    "chalk": "^5.6.2",
    "ink": "^6.6.0",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^6.0.0",
    "marked": "^17.0.1",
    "marked-terminal": "^7.3.0",
    "react": "^19.2.4",
    "react-test-renderer": "^19.2.4",
    "turbo": "^2.8.3",
    "typescript": "^5.9.3"
  },
  "publishConfig": {
    "access": "restricted",
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hasna/assistants.git"
  },
  "keywords": [
    "ai",
    "assistant",
    "cli",
    "terminal",
    "claude",
    "anthropic",
    "bun",
    "ink"
  ],
  "author": "Hasna",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hasna/assistants/issues"
  },
  "homepage": "https://github.com/hasna/assistants#readme",
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "bun": ">=1.3.9"
  },
  "workspaces": [
    "packages/*"
  ]
}
